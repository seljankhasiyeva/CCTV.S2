@using CCTV.S2.Areas.Admin.ViewModels
@model UpdateTeamMemberVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Team Membber</h4>
                <form asp-action="Update"
                      asp-controller="TeamMember"
                      method="post"
                      enctype="multipart/form-data"
                      class="forms-sample">
                    <div class="form-group">
                        <img src="~/images/@Model.Image" alt="Alternate Text" />\
                        <input asp-for="Image" hidden />
                    </div>
                    <div class="form-group">
                        <label for="Photo">Image</label>
                        <input asp-for="Photo" type="file" class="form-control" accept="image/*" placeholder="Image">
                        <span asp-validation-for="Photo" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label for="Designation">Designation</label>
                        <input asp-for="Designation" class="form-control" placeholder="Designation">
                        <span asp-validation-for="Designation" style="color:red"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

